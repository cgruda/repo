#ifndef SRC_DBG_H_
#define SRC_DBG_H_


#define SEVERITY 0xFFFFFFFF

enum severity {
	FATAL,
	ERROR,
	WARN,
	INFO,
	DEBUG,
	TRACE,
	SEVERITY_MAX
};

extern const char *severity_str[SEVERITY_MAX];


#define DBG_LOG_PRINT(level, ...) do {					\
	if (level <= SEVERITY) {							\
		printf("%s ", severity_str[level]);				\
		printf(...);									\
	} while(0);




#endif /* SRC_DBG_H_ */
